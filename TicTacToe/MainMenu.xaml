<Page x:Class="TicTacToe.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TicTacToe"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="450"
      Title="MainMenu">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="D:\Downloads\tictactoe.jpg" Opacity="0.8"/>
        </Grid.Background>

        <TextBlock HorizontalAlignment="Center" Margin="0" VerticalAlignment="Top" Width="442" Height="90" FontSize="60"  TextAlignment="Center" x:Name="TTT" Text="Tic Tac Toe"/>
        <StackPanel HorizontalAlignment="Left" Height="202" Margin="114,90,0,0" VerticalAlignment="Top" Width="222" x:Name="First">
            <TextBlock TextAlignment="Center" FontSize="30" Margin="0,20,0,0">Game Option :</TextBlock>
            <Button Content="Single Player" Margin="0,30,0,0" Height="35" Width="150" Click="btnSinglePlayer_Click"/>
            <Button Content="Multi Player" Margin="0,30,0,0" Height="35" Width="150" Click="btnMultiPlayer_Click"/>
        </StackPanel>
    </Grid>
</Page>
